<BoxLogoPrincipal>:
    orientation: 'vertical'
    on_touch_up: root.current = 'Login'
    canvas:
        Color:
            rgba: 1,1,1,0.8
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'img/LogoZero.jpg'
<BoxLogin>:
    orientation: 'vertical'
    padding: 30,120,30,120
    spacing: 10
    canvas:
        Color:
            rgb: 0.11,0.16,0.31
        Rectangle:
            size: self.size
            pos: self.pos
    
    Label:
        text: 'Login'
        font_size: 40
    TextInput:
        id: userText
        size_hint: (1, None)
        height: 55
        font_size: 30
        multiline: False
        write_tab: False
        focus: True
    TextInput:
        id: passwordText
        multiline: False
        password: True
        size_hint: (1, None)
        height: 55
        font_size: 25
        write_tab: False
    Button:
        size_hint: (1, None)
        height: 55
        font_size: 20
        text: 'Iniciar'
        on_press: root.verificarUser(userText.text,passwordText.text)

