<BoxDetails>:
    orientation: 'vertical' 
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
    ActionBar:
        ActionView:
            ActionPrevious:
                previous_image: ''
                app_icon: 'img/iconoZero.png'
                on_release: root.Menu.toggle_state()
                
            ActionButton:
                text: 'Atras'
                on_release: print('Lsita de Empleados')
            ActionSeparator:
            ActionButton:
                text: 'Actualizar'
                on_release: print('Crear Empleados')
            ActionSeparator:
            ActionButton:
                text: 'Salir'
                on_release: app.stop()
    BoxLayout:
        orientation: 'vertical' 
        padding: 20
        canvas:
            Color:
                rgb: 0.21,0.21,0.21
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical' 
            size_hint: (1, .4)
            canvas:
                Color:
                    rgb: 1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: root.img_detalle #'img/perfil-empleado.jpg'
        BoxLayout:
            id: contenedor_detalles
            orientation: 'vertical' 
            size_hint: (1, .6)
            canvas:
                Color:
                    rgb: 1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                text: '[b]Articulo Seleccionado[/b]'
                size_hint: (1, 0.3)
                markup: True
                background_color: 1, 1, 1, 1
                canvas.before:
                    Color:
                        rgb: 0,0,0
                    Rectangle:
                        size: self.size
                        pos: self.pos
            GridLayout:
                id: grid_contenedor_id
                cols:2
                canvas:
                    Color:
                        rgb: 1,1,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
            Button:
                text: "Editar"
                size_hint: (1, 0.45)
                on_press: root.btn_editar_producto()
                Image:
                    id: img_id
                    source: './img/editar_productos.png'
                    y: self.parent.y
                    #y: (self.parent.size[1]/2) - 35
                    x: self.parent.x
                    size: 75, self.parent.size[1]
                    allow_stretch: True
                


<PopUpContainer>:
<FileBox>:
    id: file_detect
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 0.21,0.21,0.21
        Rectangle:
            size: self.size
            pos: self.pos
    Image:
        id: image
        size: self.size
        source: ""
        canvas.before:
            Color:
                rgb: 0.21,0.21,0.21
            Rectangle:
                size: self.size
                pos: self.pos
    FileChooserIconView:
        path: './'
        id: filechooser
        on_selection: file_detect.selected(filechooser.selection)

