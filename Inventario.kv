<BoxInsertProducts>:
    orientation: 'vertical'
    padding: 30,10,30,40
    spacing: 5
    canvas:
        Color:
            rgb: 0.11,0.16,0.31
        Rectangle:
            size: self.size
            pos: self.pos
    
    Label:
        text: 'Detalles del Producto'
        font_size: 30
    TextInput:
        id: codeText
        hint_text: 'Codigo'
        text: 'ART-' + root.codigo
        size_hint: (1, 0.3)
        font_size: 24
        multiline: False
        write_tab: False
        disabled: True
    TextInput:
        id: nombreText
        hint_text: 'Nombre del Producto'
        size_hint: (1, 0.3)
        font_size: 24
        multiline: False
        write_tab: False
        focus: True
    TextInput:
        id: categoriaText
        hint_text: 'Categoria del Prducto'
        text: 'CTG-' + root.nombre_categoria
        size_hint: (1, 0.3)
        font_size: 24
        multiline: False
        write_tab: False
        disabled: True
    TextInput:
        id: cantidadText
        hint_text: 'Cantidad Disponible'
        size_hint: (1, 0.3)
        font_size: 24
        multiline: False
        write_tab: False
    TextInput:
        id: precioText
        hint_text: 'Precio en $'
        size_hint: (1, 0.3)
        font_size: 24
        multiline: False
        write_tab: False
    TextInput:
        id: pesoText
        hint_text: 'Peso si posee'
        size_hint: (1, 0.3)
        font_size: 24
        multiline: False
        write_tab: False
    Button:
        id: imgText
        size_hint: (1, None)
        size_hint: (1, 0.3)
        font_size: 24
        text: 'imagen del produc.'
        on_press: root.btn_chooser_file_P()
    Button:
        size_hint: (1, None)
        size_hint: (1, 0.3)
        font_size: 24
        text: 'Insertar Producto'
        on_press: root.btn_insert_product(codeText.text, nombreText.text, categoriaText.text, cantidadText.text, precioText.text, pesoText.text, None)

